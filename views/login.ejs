</head>

<body style="background-image:
url('https://images.pexels.com/photos/2946974/pexels-photo-2946974.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260)">
  <!-- https://images.pexels.com/photos/2688058/pexels-photo-2688058.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260 -->

  <div class="row">
    <div class="col-md-3" style="margin-left: 65%; margin-top: 7%;">
      <div class="card card-body">
        <h4 class="text-center mb-3"><i class="fas fa-sign-in-alt" style="font-size: 30px;"></i> Login</h4>

        <% if(success_msg != '') {%>
        <div class="alert alert-success" role="alert">
          <%= success_msg %>
        </div>
        <% } %>

        <% if(error_msg != '') {%>
        <div class="alert alert-danger" role="alert">
          <%= error_msg %>
        </div>
        <% } %>

        <% if(error != '') {%>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
        <% } %>

        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>

  <%- include('./includes/end.ejs') %>