  }

  .btn1:hover {
    background-color: #fff;
    color: #000;
    text-decoration: none;

  }

  ul {
    float: right;
    list-style-type: none;
    margin-top: 25px;
  }

  ul li {
    display: inline-block;
  }

  ul li a {
    text-decoration: none;
    color: #fff;
    padding: 5px 20px;
    border: 1px solid transparent;
    transition: 0.6s ease;
  }

  ul li a:hover {
    background-color: rgba(255, 255, 255, 0.8);
    color: rgb(0, 0, 0);
    text-decoration: none;
  }

  ul li.acive a {
    background-color: #fff;
    color: #000;
  }
